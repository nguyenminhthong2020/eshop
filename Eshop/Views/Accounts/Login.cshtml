@model Account


<div class="alert alert-danger alert-dismissible fade @(ViewBag.isFailed == 1 ? "show": "hide")" role="alert">
    <strong>Đăng nhập thất bại!</strong> <br />Kiểm tra lại username & password.
    <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
</div>
<form asp-controller="Accounts" asp-action="Login" id="frmLogin">
    <div class="mb-3 mt-3">
        <label asp-for="Username" class="form-label"></label>
        <input asp-for="Username" class="form-control" />
        <span asp-validation-for="Username" class="text-danger"></span>
    </div>
    <div class="mb-3">
        <label asp-for="Password" class="form-label"></label>
        <input asp-for="Password" class="form-control" />
        <span asp-validation-for="Password" class="text-danger"></span>
    </div>
    @*<div class="form-check mb-3">
            <label class="form-check-label">
                <input class="form-check-input" type="checkbox" name="remember"> Remember me
            </label>
        </div>*@
    <div class="d-flex justify-content-center mt-4"><button type="submit" class="btn btn-primary">Đăng nhập</button></div>

</form>

@section CSS{
    <link href="~/css/Account/Login.css" rel="stylesheet" />
}