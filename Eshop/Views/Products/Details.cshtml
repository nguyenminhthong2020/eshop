@model Eshop.Models.Product

@{
    ViewData["Title"] = "Chi tiết sản phẩm";
}
@*<div>
        <a asp-action="Index">Trở lại</a>
    </div>*@
<div class="row mt-4">
    <div class="col-sm-12 col-md-6 col-lg-5 col-xxl-4">
        <img src="~/img/product/@Model.Image" alt="..." class="img-fluid">
    </div>
    <div class="col-sm-12 col-md-6 col-lg-7 col-xxl-8">
        <div class="row" style="margin-left: 50px;">
            <h3 class="fw-bold mb-5 text-primary">
                @Html.DisplayFor(model => model.Name)
            </h3>
            <h5 class="fw-bold">
                @Html.DisplayNameFor(model => model.Description)
            </h5>
            <div class="mb-4">
                @Html.DisplayFor(model => model.Description)
            </div>
            <h5 class="fw-bold">
                @Html.DisplayNameFor(model => model.ProductType)
            </h5>
            <div class="mb-4">
                @Html.DisplayFor(model => model.ProductType.Name)
            </div>
            <h5 class="fw-bold">
                @Html.DisplayNameFor(model => model.Price)
            </h5>
            <div class="mb-5">
                @Html.DisplayFor(model => model.Price)
            </div>
            <button class="btn btn-primary" asp-controller="" asp-action="" asp-route-id="@Model.Id" style="width: 180px;">
                <span style="font-size: 1.2rem; font-weight: bold">
                    <i class="fa-solid fa-cart-plus"></i>&nbsp;&nbsp;
                    Thêm
                </span>
            </button>
        </div>
    </div>
</div>
