}

@section Scripts{
    <script>
        $(document).ready(function () {
            window.onscroll = () => {
                if (document.body.scrollTop > 120 || document.documentElement.scrollTop > 120) {
                    $('#goTop').show();
                } else {
                    $('#goTop').hide();
                }
            }
        })
    </script>
